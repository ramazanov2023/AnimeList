<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/anime_detail_name_rus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Унеси меня на луну 2"
        android:textColor="@color/text_detail_title"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/anime_detail_name_jpn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Tonikaku Kawaii 2nd Season"
        android:textColor="@color/text_detail_title"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/anime_detail_name_rus" />

    <ImageView
        android:id="@+id/anime_detail_poster"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vbddd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anime_detail_name_jpn" />

    <TextView
        android:id="@+id/anime_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tonikaku Kawaii 2nd Season"
        android:textColor="@color/text_detail_title"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/anime_detail_poster" />

</androidx.constraintlayout.widget.ConstraintLayout>